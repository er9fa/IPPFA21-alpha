<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include ('../partials/header') %>
  </head>

  <body>
    <div class="grid-container">
    <div>
      <h1><div class="item1" id="buildname"></div></h1>
      <h2><div class="item2" id="buildinfo"></div></h2>
    </div>

    <img class="item3" id="buildingimg" src="" />

    <script>
      function fetchData() {
        fetch(
          `https://8hafn7cyqb.execute-api.us-east-1.amazonaws.com/v1/facilities/id/<%= id %>`
        )
          .then((response) => {
            return response.json();
          })
          .then((data) => {
            const building = data.data[0];
            const html = building.Name;

            // how to determine if building is historic: if Y, print yes, else no.
            const html2 = `Address: ${building.Address}<br/>
              Year Built: ${building.YearBuilt}<br/>
              Square Footage: ${building.SquareFootage} ft<sup>2</sup> <br/>
              Type of Building: ${building.Category}<br/>
              Location: [${building.Longitude}, ${building.Latitude}]`;

            const imgsrc = `/img/buildingname/${html}.jpeg`;
            document.querySelector(`#buildname`).innerHTML = html;
            document.querySelector(`#buildinfo`).innerHTML = html2;

            const buildingimg = document.getElementById("buildingimg");
            buildingimg.src = imgsrc;

            buildingimg.style.width = "200px";
            buildingimg.style.height = "100px";
            buildingimg.style.borderRadius = "25px";
            //img.style.fontFamily = "Times New Roman";
            //src.appendChild(img);
          })
          .catch((error) => {
            console.log(error);
          });
      }
      fetchData();
    </script>

 </div> <!--end grid container -->
    <style>
      .item1 {
        grid-area: buildname;
      }
      .item2 {
        grid-area: buildinfo;
      }
      .item3 {
        grid-area: buildpic;
      }

      .grid-container {
        display: grid;
        grid-template-areas:
          'buildname buildname buildname buildname buildname buildname'
          'buildpic buildpic buildpic buildinfo buildinfo buildinfo'
          'buildpic buildpic buildpic buildinfo buildinfo buildinfo'
          'buildpic buildpic buildpic buildinfo buildinfo buildinfo'
          'buildpic buildpic buildpic buildinfo buildinfo buildinfo';
        grid-gap: 1px;
        padding: 1px; 
        /* grid-template-columns: auto auto auto auto auto;
        grid-template-rows: 100px 200px 200px 200px 200px; */
      }

      .grid-container > div {
        text-align: center;
        padding: 1px 0;
        font-size: 12px;
      }
      .wrapper {
        width: 100vw;
        height: 100vh;
      }

      h1 { /*building name*/
        color: white;
        background-color: #002e63;
        text-align: center; 
        font-family: 'Poiret One';
        font-size: 70px; 
      }

      body {
        background-image: url("/cool-background.png");
        background-size: cover;
        padding-top: 10px;
        padding-bottom: 10px;
      }

      h2 { /*building info*/
        text-align: right;
        font-family: 'Mate SC', serif;
        padding-top: 10px;
        padding-bottom: 10px;
        color: rgb(5, 19, 83);
        font-size: 40px;
      }


    </style>
  </body>
</html>
