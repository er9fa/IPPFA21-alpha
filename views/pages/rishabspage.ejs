    function createTableFromJSON() {
        fetch("https://api.devhub.virginia.edu/v1/transit/bus-stops")
          .then((r) => r.json())
          .then((data) => {
            let stops = data.stops;
            let rows = [];
            for (stop of stops) {
              rows.push([stop.name, stop.id, stop.code]);
            }
            let table = document.createElement("table");
            for (let i = 0; i < stops.length; i++) {
              let tr = table.insertRow(-1);
              for (let j = 0; j < 3; j++) {
                let tabCell = tr.insertCell(-1);
                tabCell.innerHTML = rows[i][j];
              }
            }
            let stopsDivContainer = document.getElementById("bus-stops");
            stopsDivContainer.innerHTML = "";
            stopsDivContainer.appendChild(table);
          });
      }
